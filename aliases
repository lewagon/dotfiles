# make terminal better
alias cp='cp -iv'                           # Preferred 'cp' implementation
alias mv='mv -iv'                           # Preferred 'mv' implementation
alias mkdir='mkdir -pv'                     # Preferred 'mkdir' implementation
alias ll='ls -lAFh'                         # Preferred 'ls' implementation
alias la='ls -Al'               	    # show hidden files
alias less='less -FSRXc'                    # Preferred 'less' implementation
alias nano='nano -W'                        # Preferred 'nano' implementation
alias wget='wget -c'                        # Preferred 'wget' implementation (resume download)
alias c='clear'                             # c:            Clear terminal display
alias path='echo -e ${PATH//:/\\n}'         # path:         Echo all executable Paths
alias show_options='shopt'                  # Show_options: display bash options settings
alias fix_stty='stty sane'                  # fix_stty:     Restore terminal settings when screwed up
alias fix_term='echo -e "\033c"'            # fix_term:     Reset the conosle.  Similar to the reset command
alias cic='set completion-ignore-case On'   # cic:          Make tab-completion case-insensitive
alias src='source ~/.bashrc'                # src:          Reload .bashrc file
alias dpkg="sudo dpkg"

# git
alias g="git"
alias gst="git status"
alias gl="git pull"
alias gup="git pull --rebase"
alias gp="git push"
alias gd="git diff"
alias gcmsg="git commit -m"
alias gco="git checkout"
alias gcm="git checkout main"
alias grbi="git rebase -i"
alias grbc="git rebase --continue"
alias grba="git rebase --abort"
alias gb="git branch"
alias gba="git branch -a"
alias glg="git log --stat --max-count=10"
alias glgg="git log --graph --max-count=10"
alias glgga="git log --graph --decorate --all"
alias glo="git log --oneline --decorate --color"
alias glog="git log --oneline --decorate --color --graph"
alias ga="git add"
alias gaa="git add --all"
alias gm="git merge"
alias grh="git reset HEAD"
alias grhh="git reset HEAD --hard"
alias gsts="git stash show --text"

# command replacements
alias cat="bat"
alias ping="prettyping --nolegend"
alias python="python3"
alias pip="python -m pip"
alias rcat="/bin/cat"
alias top="htop"
alias vim="nvim"

# mention VM stuff
alias airbytevm="ssh debian@airbyte-poc.mention.net"
alias dbtpoc="ssh debian@dbt-poc.mention.net"
alias vm="ssh -A mention@web.d.mention.net"
alias vmrestart="z mention-vagrant && vagrant halt && vagrant up && sudo mount ~/workspace/mention/mentionapp"
alias vmstop="udo umount ~/workspace/mention/mentionapp && mention-vagrant && vagrant halt"
alias vmup="z mention-vagrant && vagrant up && sudo mount ~/workspace/mention/mentionapp"

# BQ shortcuts
alias whquery="bq query --use_legacy_sql=false"
